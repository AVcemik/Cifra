<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseTextbloclStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="ContainerTextblockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BaseTextbloclStyle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0"/>
    </Style>

    <Style x:Key="AlignmentTextblocklStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BaseTextbloclStyle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>