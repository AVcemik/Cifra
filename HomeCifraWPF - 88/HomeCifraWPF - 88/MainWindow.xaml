<Window x:Class="HomeCifraWPF___88.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCifraWPF___88"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="500">
    <Grid>
        <Rectangle Fill="#FFCC40"/>
        <StackPanel Margin="20">
            <Label Content="Имя"
                   Style="{StaticResource BaseLabelStyle}"/>
            <TextBox x:Name="FirstNameTB"/>
            <Label Content="Фамилия"
                   Style="{StaticResource BaseLabelStyle}"/>
            <TextBox x:Name="LastNameTB"/>
            <Label Content="Возраст"
                   Style="{StaticResource BaseLabelStyle}"/>
            <TextBox x:Name="AgeTB"/>
            <Button Content="Получить данные"/>
        </StackPanel>
    </Grid>
</Window>
