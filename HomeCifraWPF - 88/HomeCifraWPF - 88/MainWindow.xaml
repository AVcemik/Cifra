<Window x:Class="HomeCifraWPF___88.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCifraWPF___88"
        mc:Ignorable="d"
        Title="Считыватель данных" Height="420" Width="500"
        WindowStartupLocation="CenterOwner">
    
    
    
    <Grid>
        <Rectangle Fill="#FFCC40"/>
        <StackPanel x:Name="DataStack" Margin="20" >
            <TextBlock Text="Имя" 
                   Style="{StaticResource BaseTextbloclStyle}"/>
            <TextBox x:Name="FirstNameTB" Text="{Binding FirstName}"/>
            <TextBlock Text="Фамилия"
                   Style="{StaticResource BaseTextbloclStyle}"/>
            <TextBox x:Name="LastNameTB" Text="{Binding LastName}"/>
            <TextBlock Text="Возраст"
                   Style="{StaticResource BaseTextbloclStyle}"/>
            <TextBox x:Name="AgeTB" Text="{Binding Age}"/>
            <Button x:Name="AddDataBT" Content="Получить данные" Click="AddDataBT_Click"/>
        </StackPanel>
    </Grid>
</Window>
